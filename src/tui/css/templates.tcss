TemplateTree {
    column-span: 3;
    row-span: 2;
    padding: 1;
    min-width: 30;
}

TemplateTab {
    layout: grid;
    grid-size: 4 3;
    grid-columns: 1fr 1fr 1fr 6fr;
    grid-rows: 1 1fr 5;
    grid-gutter: 1;
}

#TemplateTabTextArea {
    row-span: 2;
}

#TemplateTabTextAreaLabel {
    width: 100%;
    height: 1;
    text-align: center;
}

.template-button {
    margin: 1;
    align-horizontal: center;
    width: 100%;
}
